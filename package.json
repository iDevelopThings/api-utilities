{
  "name": "api-utilities",
  "version": "0.1.5",
  "author": {
    "name": "iDevelopThings",
    "email": "sam@idevelopthings.com",
    "url": "https://github.com/idevelopthings"
  },
  "repository": {
    "url": "https://github.com/idevelopthings/api-utilities",
    "type": "git"
  },
  "license": "MIT",
  "description": "Make api requests and convert them to Data Transfer Objects(classes) on the fly. Along with helpers to help with handling errors.",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "serve-dev": "ts-node-dev src/test/index.ts",
    "test:error-handling": "ts-node-dev src/test/test-custom-error-handling.ts",
    "buildd": "tsc -b --clean && tsc -b && rm -rf dist/test",
    "----fprepublish": "tsc -b --clean && tsc -b",
    "build": "microbundle",
    "dev": "microbundle watch"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.3.1",
    "microbundle": "^0.14.2",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@types/node": "^16.11.7",
    "axios": "^0.23.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13"
  }
}
